{% extends '@OwlCore/Email/layout.html.twig' %}

{% block subject %}
    {{ 'owl.email.verification_token.subject'|trans }}
{% endblock %}

{% block content %}
        {% set url = absolute_url(path('owl_admin_user_verification', { 'token': user.emailVerificationToken})) %}
        <div style="text-align: center; margin-bottom: 30px;">
            <div style="font-size: 24px;">
                {{ 'owl.email.verification_token.hello'|trans }} <strong>{{ user.displayName }}</strong><br>
            </div>
            {{ 'owl.email.verification_token.to_verify_your_email_address'|trans }}:
        </div>

        <div style="text-align: center;">
            <a href="{{ url|raw }}" style="display: inline-block; text-align: center; background: #1abb9c; padding: 18px 28px; color: #fff; text-decoration: none; border-radius: 3px;">
                {{ 'owl.email.verification_token.verify_your_email_address'|trans }}
            </a>
        </div>
{% endblock %}
