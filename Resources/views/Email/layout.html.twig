{% block body %}
    {% autoescape false %}
        {% set logo = absolute_url(asset('build/admin/images/logo.jpg')) %}

        <div style="font-family: sans-serif; background: #eee; padding-top: 30px; padding-bottom: 30px; font-size: 16px; color: #333; line-height: 1.5">
            <div style="max-width: 600px; margin: 20px auto;">
                <div style="margin-bottom: 30px; text-align: center;">
                    {% set url = absolute_url('/') %}
                    <a href="{{ url|raw }}">
                        <img src="{{ logo }}" alt="System ewidencji" style="width: 170px">
                    </a>
                </div>

                <div style="background: #fff; padding: 40px 30px;">
                    {% block content %}{% endblock %}
                </div>

                <div style="text-align: center; padding: 20px 0;">
                    <a href="https://rewidencja.bokk.pl/" target="_blank" style="color: #1abb9c; text-decoration: none;">rewidencja.bokk.pl</a>
                </div>
            </div>
        </div>
    {% endautoescape %}
{% endblock %}
