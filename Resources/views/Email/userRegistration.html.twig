{% extends '@OwlCore/Email/layout.html.twig' %}

{% block subject %}
    {{ 'owl.email.user_registration.subject'|trans }}
{% endblock %}

{% block content %}
{% set url = absolute_url(path('owl_admin_login')) %}
    <div style="text-align: center; margin-bottom: 30px;">
        <div style="font-size: 24px;">
            {{ 'owl.email.user_registration.welcome_to_our_system'|trans }}<br>
        </div>
        {{ 'owl.email.user_registration.you_have_just_been_registered'|trans }} {{ user.displayName }}.
    </div>

    <div style="text-align: center;">
        <a href="{{ url|raw }}" style="display: inline-block; text-align: center; background: #1abb9c; padding: 18px 28px; color: #fff; text-decoration: none; border-radius: 3px;">
            {{ 'owl.email.user_registration.start_inventory_of_equipment'|trans }}
        </a>
    </div>
{% endblock %}
