<?xml version="1.0" encoding="UTF-8"?>

<container xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://symfony.com/schema/dic/services" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true" />

        <service id="owl.resource.grid.resource_view_factory" class="Owl\Bridge\SyliusResource\Grid\View\ResourceGridViewFactory" decorates="sylius.grid.resource_view_factory" decoration-priority="256">
            <argument type="service" id="sylius.grid.data_provider" />
            <argument type="service" id="sylius.resource_controller.parameters_parser" />
        </service>

        <service id="owl.resource.grid.data_provider" class="Owl\Bridge\SyliusResource\Grid\Data\DataProvider" decorates="sylius.grid.data_provider" decoration-priority="256">
            <argument type="service" id="sylius.grid.data_source_provider" />
            <argument type="service" id="sylius.grid.filters_applicator" />
            <argument type="service" id="sylius.grid.sorter" />
            <argument type="service" id="owl.resource_controller.collection_event_dispatcher" />
        </service>

        <service id="owl.resource_controller.resources_resolver.owner_permission" class="Owl\Bridge\SyliusResource\Grid\Controller\ResourcesResolver" decorates="sylius.resource_controller.resources_resolver" decoration-priority="128">
            <argument type="service" id="owl.resource_controller.resources_resolver.owner_permission.inner" />
            <argument type="service" id="owl.resource_controller.collection_event_dispatcher" />
        </service>

        <service id="owl.grid.provider" class="Owl\Bundle\CoreBundle\Grid\SuffixableGridProvider" decorates="sylius.grid.provider" decoration-priority="128">
            <argument type="service" id="owl.grid.provider.inner" />
            <argument type="service" id="owl.grid.role_base_grid_name_provider" />
            <argument>%sylius.grids_definitions%</argument>
        </service>

        <service id="owl.grid.role_base_grid_name_provider" class="Owl\Bundle\CoreBundle\Provider\RoleBasedSuffixGridProvider">
            <argument type="service" id="owl.context.admin_user" />
        </service>

        <service id="owl.resource_controller.view_handler" decorates="sylius.resource_controller.view_handler" class="Owl\Bridge\SyliusResource\Controller\ViewHandler" public="false">
            <argument type="service" id=".inner"/>
            <argument type="service" id="fos_rest.view_handler" on-invalid="null" />
        </service>

        <service id="owl.resource_controller.collection_event_dispatcher" class="Owl\Bridge\SyliusResource\Controller\CollectionEventDispatcher" public="false">
            <argument type="service" id="event_dispatcher" />
        </service>

        <service id="owl.resource_controller.event_dispatcher" decorates="sylius.resource_controller.event_dispatcher" class="Owl\Bridge\SyliusResource\Controller\EventDispatcher" public="false">
            <argument type="service" id=".inner"/>
            <argument type="service" id="event_dispatcher" />
        </service>

        <service id="Owl\Bridge\SyliusResource\Controller\RequestConfigurationFactory" decorates="sylius.resource_controller.request_configuration_factory" public="false">
            <argument type="service" id=".inner"/>
            <argument type="service" id="router" />
            <argument>Owl\Bridge\SyliusResource\Controller\RequestConfiguration</argument>
        </service>

        <service id="owl.resource_controller.redirect_handler" decorates="sylius.resource_controller.redirect_handler" class="Owl\Bridge\SyliusResource\Controller\RedirectHandler" public="false">
            <argument type="service" id="router" />
        </service>

        <service id="owl.resource_controller.authorization_checker" class="Owl\Component\Core\Authorization\AuthorizationChecker" public="false">
            <argument type="service" id="security.authorization_checker" />
        </service>

    </services>
</container>
